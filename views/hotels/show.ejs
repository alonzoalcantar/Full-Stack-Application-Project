<!DOCTYPE html>
<html>

  <%- include('../partials/header'); %> 

  <body>
    <%- include('../partials/navbar'); %> 
    

<section id="show-page">
    <div>Name: </div>
    <div><%= hotel.name %></div>
    <div>Service Schedule: </div>
    <div><%= hotel.serviceSchedule %></div>
    <div>Length of Stay: </div>
    <div><%= hotel.lengthOfStay %></div>
    <div>Rooms:</div>
    <ul>
      <%- hotel.room.map(r => 
        `<li>${r.bedsize} <small>${r.roompackage}</small></li>`
      ).join('') %>
    </ul>
  </section>
  

  <form id="add-room-to-hotel" action="/hotels/<%= hotel._id %>/rooms" method="POST">
    <select name="roomId">
      <%- rooms.map(r => 
        `<option value="${r._id}">${r.bedsize}</option>`
      ).join('') %>
    </select>
    <button type="submit">Add to Rooms</button>
  </form>


  <br><br><h2>Reviews</h2>
  <form id="add-review-form" method="POST"
    action="/hotels/<%= hotel._id %>/reviews">
    <label>Review:</label>
    <textarea name="content"></textarea>
    <label>Rating:</label>
    <select name="rating">
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
      <option value="5">5</option>
    </select>
    <input type="submit" value="Add Review">
  </form>
  
  <% if (hotel.reviews.length) { %>
    <table>
      <thead>
        <tr>
             <th>Date</th>
          <th>Review</th>
          <th>Rating</th>
        </tr>
      </thead>
      <tbody>
        <% hotel.reviews.forEach(function(r) { %>
          <tr>

            <td>
            <form action="/hotels/<%= r.id %>?_method=DELETE"
                class="delete-form" method="POST">
                <button type="submit">X</button>
              </form>
            </td>

            <td><%= r.createdAt.toLocaleDateString() %></td>
            <td><%= r.content %></td>
            <td><%= r.rating %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  <% } else { %>
    <h5>No Reviews Yet</h5>
  <% } %>
