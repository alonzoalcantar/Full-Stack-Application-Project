<!DOCTYPE html>
<html>

  <%- include('../partials/header'); %> 

  <body>
    <%- include('../partials/navbar'); %> 
    

    <h1>Hotel List</h1>
  <table class="table">
    <thead>
      <tr>
        <th>Delete</th>
        <th>Name</th>
        <th>Length Of Stay</th>
        <th>More Information</th>
      </tr>
    </thead>
    <tbody>
      <!-- Write the line of EJS to iterate over movies using forEach -->
      <% hotels.forEach(h=> { %> 
        <tr>

            <td>
                <form action="/hotels/<%= h.id %>?_method=DELETE"
                class="delete-form" method="POST">
                <button type="submit">Delete</button>
              </form>
            
              </td>

          <td><%= h.name %></td>
          <td><%= h.lengthOfStay %></td>
            <td>
                <a href="/hotels/<%= h._id %>">Details</a>
            </td>

        </tr>
      <!-- Close the forEach using EJS here -->
      <% }); %> 
    </tbody>
  </table>
</body>
</html>

